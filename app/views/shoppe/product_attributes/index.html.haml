- @page_title = t('shoppe.product_attributes.product_attributes')

= content_for :header do
  %p.buttons= link_to t('shoppe.product_attributes.new_attribute'), :new_product_attribute, :class => 'button green'
  %h2.products= t('shoppe.product_attributes.product_attributes')

.table
  %table.data
    %thead
      %tr
        %th= t('shoppe.product_attributes.key')
        %th= t('shoppe.product_attributes.for_variant')
    %tbody
      - if @product_attributes.empty?
        %tr.empty
          %td= t('shoppe.product_attributes.no_attributes')
      - else
        - for attribute in @product_attributes
          %tr
            %td= link_to attribute.key, edit_product_attribute_path(attribute.key)
            %td= boolean_tag attribute.for_variant